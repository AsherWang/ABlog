extends ../layout/layout

block content
    .row
        br
        .col-lg-8.col-md-8.col-sm-8.col-xs-8
            .journal-title= journal.title
            .journal-info= journal.updated_at.format("yyyy年MM月dd日 hh:mm") + '　阅读(' + journal.read_count + ')'
                span &nbsp;
                a(href="/journals/" + journal._id + '/edit') 编辑
        .col-lg-4.col-md-4.col-sm-4.col-xs-4
            span.pull-right
                a.button.button-primary.button-pill(href="/journals") 返回日志列表
            span.pull-right
                form(action="/journals/" + journal._id method="POST")
                    input.hidden(name="_method", value="DELETE")
                    button.button.button-caution.button-pill 删除

    .row
        .col-lg-12.col-md-12.col-sm-12.col-xs-12
            #journal-content.journal-content= journal.content